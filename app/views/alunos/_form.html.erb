<%= form_for @aluno, :html => { :class => 'form-horizontal' } do |f| %>
    <% if @aluno.errors.any? %>
        <div id="error_explanation" class="alert alert-error">
          <h2><%= pluralize(@aluno.errors.count, "erro") %>:</h2>

          <ul>
            <% @aluno.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="control-group">
    <%= f.label :nome, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nome, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cpf, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cpf, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                alunos_path, :class => 'btn' if permitted_to? :create, @aluno %>
  </div>
<% end %>
