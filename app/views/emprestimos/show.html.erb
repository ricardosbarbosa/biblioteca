<%- model_class = Emprestimo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:aluno_id) %>:</strong></dt>
  <dd><%= @emprestimo.aluno.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:livro_id) %>:</strong></dt>
  <dd><%= @emprestimo.livro.titulo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:data_de_emprestimo) %>:</strong></dt>
  <dd><%= @emprestimo.data_de_emprestimo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:data_de_devolucao) %>:</strong></dt>
  <dd><%= @emprestimo.data_de_devolucao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:devolvido_em) %>:</strong></dt>
  <dd><%= @emprestimo.devolvido_em %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              emprestimos_path, :class => 'btn'  %>
  <%= link_to "Devolução",
              edit_emprestimo_path(@emprestimo), :class => 'btn btn-warning' if permitted_to? :edit, @emprestimo && @emprestimo.devolvido_em%>
  <%= link_to "Deletar",
              emprestimo_path(@emprestimo),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' if permitted_to? :destroy, @emprestimo %>
</div>
