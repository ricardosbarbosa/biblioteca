<%- model_class = Aluno -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @aluno.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cpf) %>:</strong></dt>
  <dd><%= @aluno.cpf %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              alunos_path, :class => 'btn'%>
  <%= link_to "Editar",
              edit_aluno_path(@aluno), :class => 'btn'  if permitted_to? :edit, @aluno %>
  <%= link_to "Deletar",
              aluno_path(@aluno),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' if permitted_to? :destroy, @aluno  %>
</div>
